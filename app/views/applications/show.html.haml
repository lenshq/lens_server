.panel.panel-default
  .panel-heading
    %h2= @application.title

  .panel-body
    .row
      .col-md-8
        %pre{ class: 'brush: ruby'}
          = preserve "# config/initializers/lens.rb\nLens.configure do |config|\n  config.app_key = '#{@application.token}'\nend"
        %svg#requests-chart.chart
      .col-md-4
        = render @application

  .panel-footer
    = link_to t('.back'), applications_path, class: 'btn btn-primary'

:javascript
  window.onload = function() {
    renderChart("#{@application.id}", "#{current_user.api_token}");
  };
