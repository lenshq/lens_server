.panel.panel-default
  .panel-heading
    %h2= t('.applications')
  .panel-body
    - if @applications.any?
      .row
        .col-md-12
          %table.table.table-striped.table-hover
            %thead
              %tr
                %th= t('application.title')
                %th= t('application.domain')
                %th= t('.actions')
            %tbody
              - @applications.each do |application|
                %tr
                  %td= link_to application.title, application_path(application)
                  %td= application.domain
                  %td
                    = link_to edit_application_path(application) do
                      %i.mdi-editor-mode-edit
                    = link_to application_path(application), method: :delete, confirm: 'Are you sure?' do
                      %i.mdi-action-delete
    - else
      .alertalert-dismissable.alert-info
        Here will be placed application list
    = link_to t('.new'), new_application_path, class: 'btn btn-primary'
