.col-md-4.col-md-offset-4
  .row
    .panel.panel-default
      .panel-heading
        %h2.text-center= t('.header')
      .panel-body
        = render 'shared/registration_form_errors'
        = form_for @registration, html: { class: 'form-horizontal' } do |f|
          %fieldset
            .form-group
              = label :email, Application.human_attribute_name(:email),
                class: 'col-md-2 control-label'
              .col-md-9.col-md-offset-1
                = f.text_field :email, class: 'form-control'
            .form-group
              = label :password, Application.human_attribute_name(:password),
                class: 'col-md-2 control-label'
              .col-md-9.col-md-offset-1
                = f.password_field :password, class: 'form-control'
            .form-group
              = label :password_confirmation, Application.human_attribute_name(:password_confirmation),
                class: 'col-md-2 control-label'
              .col-md-9.col-md-offset-1
                = f.password_field :password_confirmation, class: 'form-control'
            .form-group
              .col-md-9.col-md-offset-3
                = f.submit t('.submit'), class: 'btn btn-primary'
