.panel.panel-default
  .panel-heading
    %h1= t('.edit_user')

  .panel-body
    = render 'form', path: user_path(current_user)

  .panel-footer
    = link_to t('.back'), applications_path, class: 'btn btn-primary'
    = link_to t('.delete_user'), current_user,
                                 method: :delete,
                                 data: { confirm: 'Are you sure?' },
                                 class: 'btn btn-primary'
